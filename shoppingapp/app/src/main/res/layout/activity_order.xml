<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF8C00"
        app:subtitleTextAppearance="@style/ToolbarSubTitleSize"
        app:subtitleTextColor="@color/white"
        app:title="">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/laybg">

        <ImageView
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/placeholder" />

        <TextView
            android:id="@+id/consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/location"
            android:text="小龙"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/consignee"
            android:text="13187372257"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tx_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonenumber"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/location"
            android:text="湖南科技大学" />

        <Button
            android:id="@+id/changeaddress"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/change"
            android:text="修改地址"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="390dp"
        android:layout_height="400dp"
        android:layout_below="@+id/r1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/laybg">

        <TextView
            android:id="@+id/store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="江西南昌店" />

        <ImageView
            android:id="@+id/IM"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/store"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/orange" />

        <TextView
            android:id="@+id/imformation"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/IM"
            android:text="橘子" />

        <TextView
            android:id="@+id/price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/imformation"
            android:text="￥14.9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IM"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="购买数量" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IM"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IM"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="配送方式" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IM"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:text="普通配送"
            android:textColor="#A9A9A9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IM"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:text="快递免邮" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/IM"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:text="运费险" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/IM"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:text="运费险由卖家赠送,若确认收货前退货,可获保险赔付"
            android:textColor="#A9A9A9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IM"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:text="开具发票" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IM"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:text="本次不开具发票" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IM"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:text="订单备注" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/IM"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="185dp"
            android:background="@drawable/beizhu"
            android:hint="选填,请先和商家协商一致"
            android:maxLines="2"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_below="@+id/r2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/laybg">

        <TextView
            android:id="@+id/heji_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/aaa"
            android:layout_marginRight="10dp"
            android:text="共1件"
            android:textColor="#A9A9A9" />

        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/heji_price"
            android:layout_marginLeft="10dp"
            android:text="合计:" />

        <TextView
            android:id="@+id/heji_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/submit"
            android:text="￥14.9"
            android:textColor="	#FF8C00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/save"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="提交订单"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>